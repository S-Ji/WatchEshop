@model IEnumerable<eShopASP.DAL.Tbl_Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Category</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="../Admin/Categories">List</a></li>
        <li class="breadcrumb-item active">Categories</li>
    </ol>
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Categories
            <a href="../Admin/CategoryAdd" class="btn btn-info pull-right" style="float:right"><i class="fa fa-plus"></i>Add New</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Category Name</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                       
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.CategoryName</td>
                            <td>
                                @Html.ActionLink("Edit", "CategoryEdit", 
                               new { categoryId = item.CategoryId },
                               new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "DeleteCategory", 
                               new { categoryId = item.CategoryId },
                               new { @class = "btn btn-danger" })
                            </td>

                        </tr>
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

