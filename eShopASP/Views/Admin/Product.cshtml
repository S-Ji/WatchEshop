@model IEnumerable<eShopASP.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Product</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="../Admin/Product">List</a></li>
        <li class="breadcrumb-item active">Product</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Product
            <a href="../Admin/ProductAdd" class="btn btn-info pull-right" style="float:right"><i class="fa fa-plus"></i>Add New</a>
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Create Date</th>
                        <th>Modified Date</th>
                        <th>Quanity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Product Name</th>
                        <th>Create Date</th>
                        <th>Modified Date</th>
                        <th>Quanity</th>
                        <th>Price</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                    
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.ProductName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ModifiedDate</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>
                            @Html.ActionLink("Edit", "ProductEdit",
                           new { productId = item.ProductId },
                           new { @class = "btn btn-info"})
                            @Html.ActionLink("Delete", "DeleteProduct", 
                           new { productId = item.ProductId }, 
                           new { @class = "btn btn-danger"})
                        </td>

                    </tr>
                        
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
